<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>VideoMarkt - @Page.Title</title>
        <link href="@Href("~/css/style.css")" rel="stylesheet" />

        @RenderSection("head", required: false)


    </head>
    <body>
        <div id="page">

            <div id="header">
                <!--<p class="logo"><a href="@Href("~/")">VideoMarkt</a> </p>-->
                <div style="width: 235px; margin-left: 30px;">
                    <img  style="width: 100%;" src="~/imgs/logoimago_color_def2.png" onclick="document.formu.submit();" />
                </div>
                <div id="headerRight" style="margin-top: -63px;">
					<div id="accountSummary">@MembershipHelpers.AccountSummary()</div>
					
				</div>
                
                  <div class="menudes">
                        <a class="nav" href="@Href("~/")">Inicio</a>
                        <a class="nav" href="@Href("~/Estrenos.cshtml")">Estrenos</a>
                        <a class="nav" href="">Acerca de</a>
                        <a class="nav" href="">Contacto</a>
                     
                        <div class="marca"></div>
                        <div id="headerRight">
                            <div id="search">@RenderPage("~/Shared/Partials/_Search.cshtml")</div>
                        </div> 
                    </div>     
            </div>

            <div id="content">
                <div id="categorias">
                    @RenderPage("~/Shared/Partials/_Categorias.cshtml")
                    <div class="insertar">
                        <a href="~/insertar.cshtml">
                            <p style="color: #ddd; text-transform: uppercase; padding-bottom: 20px;">Insertar nueva Pelicula</p>
                        </a>
                    </div>
                </div>

                <div id="main">
                     @RenderBody()
                </div>
               
            
            </div>

            <div id="footer">
                &copy;@DateTime.Now.Year VideoMarkt. Todos lo derechos reservados.
            
            </div>

        </div>

    </body>
</html>
