	public static bool CategoriaEstaVacia(string categoriaId)	
	{
		var db = Database.Open("VIDEO");
		var sqlQuery = "SELECT ProductoId FROM Productos WHERE categoria = @0";

		return db.Query(sqlQuery, categoriaId).Count() == 0;
	}
    
}

