@functions {

	public static bool CategoriaExiste(string categoriaTitulo)
	{
		var db = Database.Open("VIDEO");
		var sqlQuery = "SELECT categoriaId FROM Categorias WHERE nombre = @0";

		return db.Query(sqlQuery, categoriaTitulo).Count() > 0;
	}
